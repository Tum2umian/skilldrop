         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_xml_schema.xsd">

    <description>Custom SkillDrop ruleset for analyzing PHP files</description>

    <!-- Using only officially supported rulesets -->
    <rule ref="cleancode" />
    <rule ref="codesize" />
